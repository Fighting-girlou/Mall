      if (this.checkLength > 0) {\n        this.$toast.show('您选择的' + this.checkLength + '项商品正在结算', 2000)\n      } else {\n        this.$toast.show('请您至少选择一项商品', 2000)\n      }\n      // this.$emit('tipClick')\n    }\n  }\n}\n</script>\n\n<style scoped>\n.cartButton {\n  display: flex;\n}\n.cartButton>div {\n  flex: 1;\n  padding-left: 15px;\n  display: flex;\n  align-items: center;\n}\n.all {\n  margin-left: 10px;\n}\n.computed {\n  justify-content: center;\n  background: red;\n  padding: 0;\n  margin-left: 15px;\n}\n</style>\n"]}]}